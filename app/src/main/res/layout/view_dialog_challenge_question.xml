<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/shape_edittext_border"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="赏金计算方式"
        android:textSize="17sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="赏金池=参与人数*挑战押金"
        android:textSize="14sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="可获赏金=赏金池/挑战成功人数"
        android:textSize="14sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="举个栗子：10人参与挑战押金为50的阅读挑战；最终5人挑战成功，可获赏金为100元=50元*10人/5人"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    <View
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>
    <TextView
        android:id="@+id/dialog_question_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="知道了"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/blue"/>
</LinearLayout>