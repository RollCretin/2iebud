<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/item_getdubi_user_rank"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:gravity="center|left|center_horizontal"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/rank_gold"
        android:textSize="14sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/item_getdubi_user_name"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:text="胖大海"
        android:textSize="14sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/item_getdubi_user_yueli"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:text="50"
        android:textSize="14sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/item_getdubi_user_dubi"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="550"
        android:textSize="14sp"
        android:textColor="@color/black"/>
</LinearLayout>