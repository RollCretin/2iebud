<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/float_view_bg"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">


                    <com.hxjf.dubei.widget.FloatView
                        android:id="@+id/float_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:childViewBackground="@mipmap/shape_circle"
                        app:defaultViewText="正在生成中"
                        app:parentViewBackground="@mipmap/star_bg"></com.hxjf.dubei.widget.FloatView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="38dp"
                        android:paddingLeft="15dp"
                        >

                        <ImageView
                            android:id="@+id/get_dubi_return"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/white_return_arrow" />

                        <TextView
                            android:id="@+id/get_dubi_whatis_dubi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="读币是什么？"
                            android:textColor="@color/white"
                            android:paddingLeft="12dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="7dp"
                            android:paddingRight="12dp"
                            android:background="@drawable/semicircle_rectangle"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingLeft="15dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/get_dubi_promote_yueli"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#FFEB00"
                            android:paddingLeft="18dp"
                            android:paddingRight="18dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:text="提升阅力"
                            android:background="@drawable/shape_button_blue_bg"/>
                        <TextView
                            android:id="@+id/get_dubi_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:textColor="#184F96"
                            android:text="分享"
                            android:paddingLeft="18dp"
                            android:paddingRight="18dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:drawableLeft="@mipmap/blue_share"
                            android:drawablePadding="8dp"
                            android:background="@drawable/shape_share_yello_bg"/>

                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_below="@id/float_view_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_dubi_rank_bg"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/get_dubi_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="125.50"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:drawablePadding="10dp"
                        android:layout_margin="15dp"
                        android:drawableLeft="@mipmap/dubi_black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rank_list"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="17sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="排名"
                            android:textSize="14sp"
                            android:textColor="@color/gray_text"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:text="昵称"
                            android:textSize="14sp"
                            android:textColor="@color/gray_text"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text="阅力"
                            android:textSize="14sp"
                            android:textColor="@color/gray_text"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="读币"
                            android:textSize="14sp"
                            android:textColor="@color/gray_text"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/gray"/>
                    <LinearLayout
                        android:id="@+id/get_dubi_user_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/float_view_ll_yueli"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="48dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/shape_yueli_bg">
                    <TextView
                        android:id="@+id/get_dubi_yueli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="256"
                        android:textSize="12sp"
                        android:textColor="@color/yellow"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="阅力"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_alignParentBottom="true"
                        android:layout_alignRight="@+id/imageView2"
                        android:layout_alignEnd="@+id/imageView2" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>