<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:id="@+id/unchange_card_layout"
    android:layout_width="316dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_card_border"
    android:orientation="vertical">
    <TextView
        android:id="@+id/un_challege_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="尚未参与读书挑战"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/un_challege_book_image"
            android:layout_width="100dp"
            android:layout_height="147dp"
            android:layout_marginTop="35dp" />

        <TextView
            android:id="@+id/un_challege_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/un_challege_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="10dp"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:id="@+id/un_challege_launch_challenge"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:text="发起挑战"
            android:layout_marginRight="15dp"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:background="@drawable/shape_unlogin_button"/>
        <TextView
            android:id="@+id/un_challege_join_challenge"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:text="参与挑战"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:background="@drawable/shape_login_button"/>
    </LinearLayout>

</LinearLayout>