<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.itheima.pulltorefreshlib.PullToRefreshListView
        android:id="@+id/booklist_item_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:overScrollMode="never"
        app:ptrShowIndicator="false">
    </com.itheima.pulltorefreshlib.PullToRefreshListView>
    <ProgressBar
        android:id="@+id/booklist_item_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/myprogressbar"/>
    <TextView
        android:id="@+id/booklist_item_empty_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="10dp"
        android:drawableTop="@mipmap/empty_book"
        android:text="暂无书单"
        android:textSize="12sp"
        android:visibility="gone"/>

</RelativeLayout>