<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:padding="7dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/search_book_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/serach"/>
            <EditText
                android:id="@+id/search_book_bookname"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:hint="请输入书名"
                android:textCursorDrawable="@drawable/shape_edittext_cursor"
                android:background="@null"
                android:textSize="14sp"
                android:maxLines="1"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"/>
        </LinearLayout>
        <TextView
            android:id="@+id/search_book_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textSize="17sp"
            android:textColor="@color/blue"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.itheima.pulltorefreshlib.PullToRefreshListView
            android:id="@+id/search_book_list"
            app:ptrShowIndicator="false"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.itheima.pulltorefreshlib.PullToRefreshListView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/search_book_ll_lately_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:text="最近搜索"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray"/>
                <com.zhy.view.flowlayout.TagFlowLayout
                    app:gravity="center"
                    android:id="@+id/search_book_tagfl_lately"
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    app:max_select="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.zhy.view.flowlayout.TagFlowLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_book_ll_hot_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1px"
                        android:background="@color/gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热门书籍"
                        android:textColor="@color/gray"
                        android:textSize="17sp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1px"
                        android:background="@color/gray"/>
                </LinearLayout>

                <com.zhy.view.flowlayout.TagFlowLayout
                    app:gravity="center"
                    android:id="@+id/search_book_tagfl_hot"
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    app:max_select="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.zhy.view.flowlayout.TagFlowLayout>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/search_book_empty_book"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无对应书籍"
            android:layout_centerInParent="true"
            android:drawableTop="@mipmap/empty_book"
            android:drawablePadding="10dp"
            android:textSize="12sp"/>

    </RelativeLayout>

</LinearLayout>