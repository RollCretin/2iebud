<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
        <TextView
            android:id="@+id/dialog_minute_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/cacel"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/time_remind_setting"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/dialog_minute_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="@string/done"
            android:textColor="@color/blue"
            android:textSize="16sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
    <com.wx.wheelview.widget.WheelView
        android:id="@+id/dialog_start_time"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:layout_gravity="center"
        />
    <com.wx.wheelview.widget.WheelView
        android:id="@+id/dialog_end_time"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="50dp"
        android:layout_gravity="center"
        android:layout_height="200dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/repeat"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/dialog_minute_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/arrow"
            android:drawablePadding="10dp"
            android:textColor="@color/black"/>
    </RelativeLayout>

</LinearLayout>