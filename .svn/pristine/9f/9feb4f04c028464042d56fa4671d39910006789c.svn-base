<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.itheima.pulltorefreshlib.PullToRefreshListView
        android:id="@+id/bookanalysis_item_list"
        app:ptrShowIndicator="false"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" />
    <ProgressBar
    android:id="@+id/bookanalysis_progress"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:indeterminateDrawable="@drawable/myprogressbar"/>
    <TextView
        android:id="@+id/bookanalysis_empty_book"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无书籍"
        android:layout_centerInParent="true"
        android:drawableTop="@mipmap/empty_book"
        android:drawablePadding="10dp"
        android:textSize="12sp"/>
</RelativeLayout>