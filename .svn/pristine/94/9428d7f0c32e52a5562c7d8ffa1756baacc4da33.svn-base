<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/item_wonderful_activity_image"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:src="@color/sec_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_wonderful_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="2017年预见未来读书分享会年预见未来读书分享会"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来自"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_wonderful_activity_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/zone_name1"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/item_wonderful_activity_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017／07／28～2017/07/31"
            android:textSize="12sp"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>